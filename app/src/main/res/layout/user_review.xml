<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvUserReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="9dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clUserReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvUserReviewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="This is the review number "
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/clUserReview"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvNumberOfReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="-1dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tvUserReviewText"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvUserRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="and the rating is "
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/tvNumberOfReview"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvUserReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tvUserRatingText"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
